<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
     >
    
     <LinearLayout 
        android:id="@+id/canvasLayout"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="horizontal"
    	>
    	
    	<com.example.mydraw.DrawPad
    	    android:id="@+id/mainCanvas"
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:background="#777"
    	    /> 
    	 	
    	</LinearLayout>
    	
     <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent" >

         <Button
             android:id="@+id/topLeftCornerButton"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:background="@drawable/ic_launcher" />

         <Button
             android:id="@+id/bottonRightCornerButton"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:background="@drawable/ic_launcher" />

         
          <com.larswerkman.holocolorpicker.ColorPicker
		    android:id="@+id/colorPicker"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:visibility="gone"/>
          
         <LinearLayout
             android:id="@+id/widthLayout"
             android:layout_width="140dp"
             android:layout_height="40dp"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:visibility="gone" >

             <Button
                 android:id="@+id/widthSmallButton"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:background="@drawable/ic_launcher" />

             <Button
                 android:id="@+id/widthMediumButton"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:background="@drawable/ic_launcher" />

             <Button
                 android:id="@+id/widthLargeButton"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:background="@drawable/ic_launcher" />
         </LinearLayout>
         
        

         <LinearLayout
            android:id="@+id/typeLayout"
             android:layout_width="40dp"
             android:layout_height="140dp"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/widthLayout"
             android:layout_marginTop="22dp"
             android:orientation="vertical"
             android:visibility="gone" >

             <Button
                 android:id="@+id/pointButton"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:background="@drawable/ic_launcher"
                 android:text="Points" />

             <Button
                 android:id="@+id/lineButton"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:background="@drawable/ic_launcher" 
                 android:text="Line"/>

             <Button
                 android:id="@+id/circleButton"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:background="@drawable/ic_launcher" />
         </LinearLayout>

         <Button
             android:id="@+id/topRightCornerButton"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:background="@drawable/ic_launcher" />

     </RelativeLayout>

	

</FrameLayout>
